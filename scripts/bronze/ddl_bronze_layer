WE are creating tables through the data definition language to carry out further analysis. This code defines the data to be stored in six
tables and their dataypes using SQL.



CREATE TABLE IF NOT EXISTS bronze.crm_customer_info (
    cst_id INT,
    cst_key VARCHAR(50),
    cst_firstname VARCHAR(50),
    cst_lastname VARCHAR(50) ,
    cst_marital_status VARCHAR(50),
    cst_gndr VARCHAR(50),
    cst_create_date DATE
) ENGINE = InnoDB;


CREATE TABLE IF NOT EXISTS bronze.crm_product_info (
    prd_id INT,
    prd_key VARCHAR(50),
    prd_nm VARCHAR(50),
    prd_cos INT,
    prd_line VARCHAR(50),
    prd_start_dt DATETIME,
    prd_end_dt DATETIME
) ENGINE = InnoDB;

CREATE TABLE IF NOT EXISTS bronze.crm_sales_details (
    sls_ord_num VARCHAR(50),
    sls_prd_key VARCHAR(50),
    sls_cust_id INT,
    sls_order_dt DATE,
    sls_ship_dt DATE,
    sls_due_dt DATE,
    sls_sales INT,
    sls_quantity INT,
    sls_price INT
) ENGINE = InnoDB;

CREATE TABLE IF NOT EXISTS bronze.erp_loc_a101 (
cid VARCHAR(50),
cntry VARCHAR(50)
) ENGINE = InnoDB;

CREATE TABLE IF NOT EXISTS bronze.erp_cust_az12 (

cid VARCHAR(50),
bdate DATE,
gen VARCHAR(50)

)ENGINE = InnoDB;

CREATE TABLE IF NOT EXISTS bronze.erp_px_cat_g1v2 (

id VARCHAR(50),
cat VARCHAR(50),
subcat VARCHAR(50),
maintenance VARCHAR(50)
) ENGINE = InnoDB;
